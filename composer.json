{
  "name": "phoneburner/salt-lite-skeleton",
  "description": "Salt-Lite Application Skeleton",
  "type": "project",
  "license": "proprietary",
  "config": {
    "platform": {
      "php": "8.3"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "sllh/composer-lint": true
    }
  },
  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/andysnell/http-tortilla"
    },
    {
        "type": "github",
        "url": "https://github.com/tjlytle/api-handler"
    },
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/composer-replacements"
    },
    {
      "type": "github",
      "url": "https://github.com/PhoneBurnerOpenSource/php-coding-standard"
    },
    {
      "type": "github",
      "url": "https://github.com/phoneburner/salt-lite-framework"
    },
    {
      "type": "github",
      "url": "https://github.com/phoneburner/salt-lite-phpstan"
    }
  ],
  "autoload": {
    "classmap": [
    ],
    "psr-4": {
      "PhoneBurner\\SaltLite\\App\\": "src/",
      "PhoneBurner\\SaltLite\\Migrations\\": "database/migrations/"
    },
    "files": [
      "includes/bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "PhoneBurner\\SaltLite\\App\\Tests\\Unit\\": "tests/unit/"
    }
  },
  "require": {
    "php": "^8.3",
    "ext-bcmath": "*",
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-exif": "*",
    "ext-gmp": "*",
    "ext-iconv": "*",
    "ext-igbinary": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-random": "*",
    "ext-redis": "*",
    "ext-sodium": "*",
    "ext-timezonedb": "*",
    "ext-zip": "*",
    "ext-zlib": "*",
    "phoneburner/composer-replacements": "dev-main",
    "phoneburner/salt-lite-framework": "dev-main",
    "phoneburner/http-tortilla": "dev-v2.x-dev as 2.0.0",
    "phoneburner/api-handler": "dev-RC2-dev as 1.0.0"
  },
  "require-dev": {
    "brianium/paratest": "^7.5",
    "filp/whoops": "^2.16",
    "phoneburner/salt-lite-phpstan": "dev-main",
    "phoneburner/coding-standard": "dev-main",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpspec/prophecy": "^1.19",
    "phpspec/prophecy-phpunit": "^2.2",
    "phpunit/phpunit": "^11",
    "psy/psysh": "^0.12.4",
    "rector/rector": "^1.2.7",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^7.1.5"
  },
  "scripts": {
    "lint": "@php vendor/bin/parallel-lint -j $(nproc) --show-deprecated --exclude vendor --exclude build .",
    "phpcbf": "@php vendor/bin/phpcbf --parallel=$(nproc) --report=full",
    "phpcs": "@php vendor/bin/phpcs --parallel=$(nproc) --report=full",
    "phpstan": "@php vendor/bin/phpstan analyze --memory-limit=-1 --verbose",
    "test": [
      "@putenv XDEBUG_MODE=off",
      "@php vendor/bin/phpunit"
    ],
    "test-coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "@php vendor/bin/phpunit --coverage-html=html/phpunit"
    ],
    "test-parallel": [
      "@php vendor/bin/paratest"
    ],
    "rector": "@php vendor/bin/rector process",
    "rector-dry-run": "@php vendor/bin/rector process --dry-run",
    "ci": [
      "@lint",
      "@phpcs",
      "@test",
      "@phpstan",
      "@php vendor/bin/rector process --dry-run --clear-cache"
    ]
  },
  "extra": {
  }
}
